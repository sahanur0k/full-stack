      { name: "TreasHunt", desc: "& Riddles", img: "path.jpeg" },
      { name: "TreasHunt", desc: "& Riddles", img: "code.jpeg" },
      
    ],
    "Non-Tech": [
      
     
      { name: "Treasure Hunt", desc: "Clues & Riddles", img: "hunt.jpeg" },
      { name: "TreasHunt", desc: "& Riddles", img: "tug.jpeg" },
      
    ],
    "Gaming": [
     
      
      { name: "Trunt", desc: "& Res", img: "pubg.jpeg" },
      { name: "TreasHunt", desc: "Valorant Showdown", img: "valorant.jpeg" },// Fixed image extension
    ]
  };

  let currentCategory = "All";
  let mixedEvents = [];
  let currentIndex = 0;
  const track = document.getElementById("carousel-track");

  function shuffleAndMix() {
    const tech = allEventsRaw["Tech"];
    const nonTech = allEventsRaw["Non-Tech"];
    const gaming = allEventsRaw["Gaming"];
    const maxLen = Math.max(tech.length, nonTech.length, gaming.length);
    const combined = [];
    for (let i = 0; i < maxLen; i++) {
      if (tech[i]) combined.push(tech[i]);
      if (nonTech[i]) combined.push(nonTech[i]);
      if (gaming[i]) combined.push(gaming[i]);
    }
    return combined;
  }

  function setCategory(cat, btn) {
    currentCategory = cat;
    currentIndex = 0;
    document.querySelectorAll(".tab").forEach(b => b.classList.remove("active"));
    btn.classList.add("active");
    render();
  }

  function render() {
    let events = [];
    if (currentCategory === "All") {
      events = shuffleAndMix();
    } else {
      events = allEventsRaw[currentCategory];
    }
    mixedEvents = events;

    track.innerHTML = events.map((ev, i) => `
      <div class="card ${i === currentIndex ? 'active' : ''}" onclick="openPopup(${i})">
        <img src="${ev.img}" alt="${ev.name}" />
        <div class="info">
          <h4>${ev.name}</h4>
          <p>${ev.desc}</p>
        </div>
      </div>
    `).join("");

    updateDots();
    updatePosition();
  }

  function updateDots() {
    const dots = document.getElementById("dots");
    dots.innerHTML = mixedEvents.map((_, i) => `
      <span class="dot ${i === currentIndex ? 'active' : ''}" onclick="goTo(${i})"></span>`).join('');
  }

  function updatePosition() {
    const offset = currentIndex * (250 + 20); // width + margin
    document.querySelectorAll(".card").forEach((c, i) => {
      c.classList.toggle("active", i === currentIndex);
    });
    track.style.transform = `translateX(-${offset}px)`;
  }

  function nextSlide() {
    currentIndex = (currentIndex + 1) % mixedEvents.length;
    updatePosition();
    updateDots();
  }

  function prevSlide() {
    currentIndex = (currentIndex - 1 + mixedEvents.length) % mixedEvents.length;
    updatePosition();
    updateDots();
  }

  function goTo(i) {
    currentIndex = i;
    updatePosition();
    updateDots();
  }

  function openPopup(i) {
    const e = mixedEvents[i];
    document.getElementById("popup-img").src = e.img;
    document.getElementById("popup-title").innerText = e.name;
    document.getElementById("popup-desc").innerText = e.desc;
    document.getElementById("popup").style.display = 'flex';
  }

  function closePopup() {
    document.getElementById("popup").style.display = 'none';
  }

  // Swipe Support
  let startX;
  track.addEventListener('touchstart', e => startX = e.touches[0].clientX);
  track.addEventListener('touchend', e => {
    let endX = e.changedTouches[0].clientX;
    if (startX - endX > 50) nextSlide();
    else if (endX - startX > 50) prevSlide();
  });

  // Auto-scroll
  setInterval(() => {
    if (currentCategory === "All") nextSlide();
  }, 4000);

  render();
</script>


