<section class="relative bg-white" x-data="{
  slides: [
    'SRP_8799.jpg',
    'SRP_8709.jpg',
    'SRP_8281.jpg',
    
  ],
  currentSlide: 0,
  texts: ['Signifiya 2025 |', 'Loading... |', 'on 4th & 5th April |'],
  currentText: '',
  index: 0,
  charIndex: 0,
  typing: true,
  autoSlideInterval: null,
  init() {
    this.startAutoSlide();
    this.typewriter();
  },
  startAutoSlide() {
    this.autoSlideInterval = setInterval(() => {
      this.nextSlide();
    }, 5000);
  },
  goToSlide(idx) {
    this.currentSlide = idx;
    clearInterval(this.autoSlideInterval);
    this.startAutoSlide();
  },
  nextSlide() {
    this.currentSlide = (this.currentSlide + 1) % this.slides.length;
  },
  typewriter() {
    setInterval(() => {
      const currentFullText = this.texts[this.index];

      if (this.typing) {
        if (this.charIndex < currentFullText.length) {
          this.currentText += currentFullText.charAt(this.charIndex);
          this.charIndex++;
        } else {
          this.typing = false;
          setTimeout(() => {}, 1000);
        }
      } else {
        if (this.charIndex > 0) {
          this.currentText = this.currentText.slice(0, -1);
          this.charIndex--;
        } else {
          this.typing = true;
          this.index = (this.index + 1) % this.texts.length;
        }
      }
    }, 100);
  }
}" x-init="init()">

  <div class="absolute inset-0 bg-black opacity-00"></div>
  <!-- Background Slideshow -->
  <div class="h-[550px] overflow-hidden relative">
    <template x-for="(slide, idx) in slides" :key="idx">
      <div x-show="currentSlide === idx">
        <!-- Check if the slide is a video -->
        <template x-if="slide.includes('.mp4')">
          <video autoplay muted loop class="absolute inset-0 w-full h-full object-cover">
            <source :src="slide" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </template>

        <!-- If it's an image -->
        <template x-if="!slide.includes('.mp4')">
          <img
            :src="slide"
            class="absolute inset-0 w-full h-full object-cover transition-opacity duration-1000 opacity-100"
          />
        </template>
      </div>
    </template>

    <!-- Slide Dots (Clickable) -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex gap-2 z-20">
      <template x-for="(slide, idx) in slides" :key="'dot-'+idx">
        <div
          @click="goToSlide(idx)"
          :class="{
            'bg-black scale-110': currentSlide === idx,
            'bg-gray-400': currentSlide !== idx
          }"
          class="w-3 h-3 rounded-full cursor-pointer transition duration-300"
        ></div>
      </template>
    </div>
  </div>

  <!-- Left: Typewriter Text -->
  <div class="absolute bottom-10 left-10 text- z-10">
